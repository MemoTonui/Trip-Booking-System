<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.linda.food"
    android:hardwareAccelerated="false"
    android:largeHeap="true">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/favicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/favicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">
        <activity android:name=".UI.Support" android:theme="@style/Theme.Food" android:label="Support" ></activity>
        <activity android:name=".UI.Profile" android:theme="@style/Theme.Food" android:label="Profile" />
        <activity android:name=".UI.Cart" android:theme="@style/Theme.Food" android:label="Cart" />
        <activity android:name=".UI.Favorites" android:theme="@style/Theme.Food" android:label="Favorites" />
        <activity android:name=".UI.Orders" android:theme="@style/Theme.Food" android:label="My Orders" />
        <activity
            android:name=".UI.FoodActivity"
            android:theme="@style/Theme.Food" />
        <activity android:name=".UI.IntroductoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.Login" />
        <activity android:name=".UI.MainActivity"  />
    </application>

</manifest>